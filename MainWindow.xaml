<Window x:Class="Tabella.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tabella"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox Stretch="UniformToFill">
        <Grid>
            <DataGrid x:Name="table" HorizontalAlignment="Center" CanUserAddRows="False" Height="290" Margin="0,110,0,0" VerticalAlignment="Top" Width="760" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged"/>
            <Label x:Name="lbUP" Content="Numero U.P." FontSize="10" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tbUP" HorizontalAlignment="Left" FontSize="10" Margin="10,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lbD" Content="Numero D." FontSize="10" HorizontalAlignment="Left" Margin="5,35,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tbD" HorizontalAlignment="Left" FontSize="10" Margin="10,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="btnGenerate" Content="Genera tabella" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="120" Click="btnGenerate_Click"/>


        </Grid>
    </Viewbox>
</Window>
